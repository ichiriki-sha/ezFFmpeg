<Window x:Class="ezFFmpeg.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="420"
        Height="280"
        Background="#2B2B2B"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Topmost="True">

    <Border CornerRadius="8"
            BorderBrush="#444"
            BorderThickness="1"
            Padding="1">

        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resources/Images/SplashImage.png"
                        Stretch="UniformToFill"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="22"/>
                <RowDefinition Height="4"/>
            </Grid.RowDefinitions>

            <!-- 下段（メッセージ + バージョン） -->
            <Grid Grid.Row="1" Margin="8,0">

                <!-- メッセージ（画面中央） -->
                <TextBlock Text="{Binding Message}"
                            FontSize="12"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

                <!-- バージョン（右端） -->
                <TextBlock Text="{Binding Version}"
                           Foreground="#888"
                           FontSize="12"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- ProgressBar -->
            <ProgressBar Grid.Row="2"
                         Minimum="0"
                         Maximum="100"
                         Value="{Binding Progress}"
                         Height="4"
                         Background="#444"
                         Foreground="#2D7DFF"/>
        </Grid>
    </Border>
</Window>
